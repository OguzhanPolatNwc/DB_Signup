@model RegisterModel

<h2>Register</h2>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form asp-controller="Register" asp-action="Index" method="Post" class="mx-1 mx-md-4">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Username" type="text" id="form3Example1c" class="form-control" />
                                            <label class="form-label" asp-for="Username">User Name</label> <br />
                                            <span asp-validation-for="Username"></span>

                                        </div>

                                    </div>


                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Email" type="email" id="form3Example3c" class="form-control" />
                                            <label class="form-label" asp-for="Email">Your Email</label> <br />
                                            <span asp-validation-for="Email"></span>
                                        </div>

                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Password" type="password" id="form3Example4c" class="form-control" />
                                            <label class="form-label" asp-for="Password">Password</label> <br />
                                            <span asp-validation-for="Password"></span>
                                        </div>

                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input asp-for="IsAgreed"
                                               class="form-check-input me-2"
                                               type="checkbox"
                                               id="form2Example3c" />
                                        <label asp-for="IsAgreed" class="form-check-label" for="form2Example3">
                                            Aslanim tikla bakayim buraya, <a href="#">Terms of service</a>
                                        </label>
                                        <span asp-validation-for="IsAgreed"></span>
                                    </div>


                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <input type="submit" class="btn btn-primary btn-lg">
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
